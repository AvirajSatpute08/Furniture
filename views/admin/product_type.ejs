<%- include("navbar.ejs")%>

<!-- Product TYpe add start  -->
<form action="/admin/save_product_type" method="post">
    <div class="container-fluid p-4 bg-white">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-12">
                <h3>Add Product Type</h3>
            </div>
            <div class="col-md-6">
                Enter Type
                <input type="text" name="product_type_name" id="" class="form-control " required>
            </div>
            <div class="col-md-3">
               <br><button class="btn btn-primary">Save Product Type</button>
            </div>
        </div>
    </div>
</form>
<br>
<!-- Product Type Add End -->

<!-- Product Types table content start -->
<div class="container-fluid bg-white">
    <div class="row justify-content-center text-center">
        <div class="col-md-8 ">
            <h3>All Product Types</h3>
        </div>
        <div class="col-md-8">
            <table class="table table-hover table-responsive ">
                <tr >
                    <th>Action</th>
                    <th>SrNo.</th>
                    <th>Type</th>
                </tr>
                <tr> 
                    <% if(types.length <=0 ){ %>
                        <td colspan="3" rowspan="3">No Record Available!!!</td>
                        <% } %>
                </tr>
                <% for(i=0; i<types.length; i++){
                    %>
                    <tr>
                    <td>
                        <a href="/admin/edit_product_type/<%=types[i].product_type_id%>" ><button class="btn btn-success"><i class="fa fa-edit" style="font-size:24px"></i></button></a>
                        <a href="/admin/delete_product_type/<%=types[i].product_type_id%>"><button class="btn btn-danger"><i class="fa fa-trash-o" style="font-size:24px"></i></button></a>
                    </td>
                    <td>
                        <%=i+1%>
                    </td>
                    <td>
                        <%=types[i].product_type_name%>
                    </td>
                    </tr>
                <%}%>
                
            </table>
        </div>
    </div>
</div>
<!-- Product Types list end -->

