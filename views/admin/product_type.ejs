<%- include("navbar.ejs") %>

<!-- Product Type Add Start -->
<form action="/admin/save_product_type" method="post">
    <div class="container-fluid p-4 bg-white">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-12">
                <h3>Add Product Type</h3>
            </div>
            <div class="col-md-6">
                <label for="product_type_id">Enter Product Type ID</label>
                <input type="text" name="product_type_id" id="product_type_id" class="form-control" required>
            </div>
            <div class="col-md-6">
                <label for="product_type_name">Enter Type</label>
                <input type="text" name="product_type_name" id="product_type_name" class="form-control" required>
            </div>
            <div class="col-md-3">
                <br>
                <button type="submit" class="btn btn-primary">Save Product Type</button>
            </div>
        </div>
    </div>
</form>
<br>
<!-- Product Type Add End -->

<!-- Product Types Table Content Start -->
<div class="container-fluid bg-white">
    <div class="row justify-content-center text-center">
        <div class="col-md-8">
            <h3>All Product Types</h3>
        </div>
        <div class="col-md-8">
            <table class="table table-hover table-responsive">
                <thead>
                    <tr>
                        <th>Action</th>
                        <th>Sr. No.</th>
                        <th>Type</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (types.length <= 0) { %>
                        <tr>
                            <td colspan="3">No Record Available!!!</td>
                        </tr>
                    <% } else { %>
                        <% types.forEach((type, index) => { %>
                            <tr>
                                <td>
                                    <a href="/admin/edit_product_type/<%= type._id %>">
                                        <button class="btn btn-success">
                                            <i class="fa fa-edit" style="font-size: 24px"></i>
                                        </button>
                                    </a>
                                    <a href="/admin/delete_product_type/<%= type._id %>">
                                        <button class="btn btn-danger">
                                            <i class="fa fa-trash-o" style="font-size: 24px"></i>
                                        </button>
                                    </a>
                                </td>
                                <td><%= index + 1 %></td>
                                <td><%= type.product_type_name %></td>
                            </tr>
                        <% }); %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Product Types List End -->

