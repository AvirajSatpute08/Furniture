<%- include("navbar.ejs") %>

    <form action="/admin/save_testimonial" method="post" enctype="multipart/form-data">
        <div class="container-fluid p-4 bg-white">
            <div class="row">
                <div class="mb-3 col-md-12">
                    <h3>Testimonial</h3>
                </div>
                <div class="mb-3 col-md-6">
                    Customer Name &#9824
                    <input type="text" name="c_name" class="form-control" id="">
                </div>
                <div class="mb-3 col-md-6">
                    Customer Position :
                    <input type="text" name="c_position" class="form-control" id="">
                </div>
                <div class="mb-3 col-md-6">
                    Customer Image :
                    <input type="file"  name="c_image" class="form-control" id="">
                </div>
                <div class="mb-3 col-md-6">
                    Customer Message &#9824
                    <textarea name="c_message" id="" class="form-control"></textarea>
                </div>
                <div class="col-md-12 text-center">
                    <button class="btn btn-primary">Save Testimonial</button>
                </div>
            </div>
        </div>
    </form>

    <br>
    <div class="container-fluid">
        <div class="row justify-content-center text-center">
            <div class="col-md-8 ">
                <h3>Testimonial List</h3>
            </div>
            <div class="col-md-12">
                <table class="table table-hover table-responsive ">
                    <tr>
                        <th>Action</th>
                        <th>SrNo.</th>
                        <th>Customer Name</th>
                        <th>Customer Position</th>
                        <th>Customer Message</th>
                        <th>Customer Image</th>
                    </tr>
                    <tr>
                        <% if(testimonial.length <=0 ){ %>
                            <td colspan="3" rowspan="3">No Record Available!!!</td>
                            <% } %>
                    </tr>
                    <% for(i=0; i<testimonial.length; i++){ %>
                        <tr>
                            <td>
                                <a href="/admin/edit_testimonial/<%=testimonial[i].c_id%>"><button
                                        class="btn btn-success "><i class="fa fa-edit" style="font-size:24px"></i></button></a>
                                <a href="/admin/delete_testimonial/<%=testimonial[i].c_id%>"><button
                                        class="btn btn-danger"><i class="fa fa-trash-o" style="font-size:24px"></i></button></a>
                            </td>
                            <td>
                                <%=i+1%>
                            </td>
                            <td>
                                <%=testimonial[i].c_name%>
                            </td>
                            <td>
                                <%=testimonial[i].c_position%>
                            </td>
                            <td>
                                <%=testimonial[i].c_message%>
                            </td>
                            <td>
                                <img src="/uploads/<%=testimonial[i].c_image%>" width="100px" height="100px" alt="">
                            </td>
                        </tr>
                        <%}%>
        
                </table>
            </div>
        </div>
    </div>
    


<%- include("footer.ejs") %>