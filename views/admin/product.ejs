<%- include("navbar.ejs") %>

<form action="/admin/save_product" method="post" enctype="multipart/form-data">
<div class="container-fluid p-4 bg-white">
    <div class="row">
        <div class="mb-3 col-md-12">
            <h3>Add New Product</h3>
        </div>
        <div class="col-md-3 mb-3">
            Select Type :
            <select name="product_type" class="form-select" required>
                <option value="" selected disabled>Select Type </option>
                <% for(let i=0; i<types.length; i++)
                { %>
                        <option value="<%=types[i].product_type_id%>"><%=types[i].product_type_name%></option>
                    <%}%>
            </select>
        </div>
        <div class="mb-3 col-md-3">
            Product Name &#9824
            <input type="text" name="product_name" class="form-control" id="">
        </div>
        <div class="mb-3 col-md-3">
            Product Price &#8377
            <input type="number" name="product_price" class="form-control" id="">
        </div>
        <div class="mb-3 col-md-3">
            Duplicate Price &#8377
            <input type="number" name="duplicate_price" class="form-control" id="">
        </div>
        <div class="mb-3 col-md-3">
            Product Image :
            <input type="file" multiple name="product_image" class="form-control" id="">
        </div>
        <div class="mb-3 col-md-3">
            Product Size 
            <input type="text" name="product_size" id="" class="form-control">
        </div>
        <div class="mb-3 col-md-3">
            Product Color &#10024
            <input type="color" name="product_color" id="" class="form-control">
        </div>
        <div class="mb-3 col-md-3">
            Product Labels :
            <input type="text" name="product_label" class="form-control" id="">
        </div>
        <div class="mb-3 col-md-12">
            Product Details &#9824
            <textarea name="product_details" id="" class="form-control"></textarea>
        </div>
        <div class="col-md-12 text-center">
            <button class="btn btn-primary">Save Product</button>
        </div>
    </div>
</div>
</form>

<%- include("footer.ejs") %>