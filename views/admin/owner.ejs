<%- include("navbar.ejs") %>

<form action="/admin/save_team" method="post" enctype="multipart/form-data">
    <div class="container-fluid bg-white p-3 text-center">
        <div class="row">
            <div class="col-md-12  mb-2">
                <h3>Add Member </h3>
            </div>
            <div class="col-md-4 mb-2 text-start">
                Name :
                <input type="text" name="team_name" class="form-control" id="">
            </div>
            <div class="col-md-4 mb-2 text-start">
                Enter Position :
                <input type="text" name="team_position" class="form-control" id="">
            </div>
            <div class="col-md-4">
                Image :
                <input type="file" name="team_image" class="form-control" id="">
            </div>
            <div class="col-md-6 mb-2 text-start">
                Member Details :
                <input type="text" name="team_details" class="form-control" id="">
            </div>
            <div class="col-md-6 text-start mb-4">
                Profile Link :
                <input type="text" name="profile_link" class="form-control">
            </div>
        </div>
        <button class="btn btn-primary mb-3">Save Data </button>
    </div>
</form>
<br><br>

<div class="container-fluid bg-white">
    <div class="row justify-content-center text-center">
        <div class="col-md-8 mb-3 text-decoration-underline">
            <h3>Team Member List</h3>
        </div>
        <div class="col-md-12">
            <table class="table table-hover table-responsive ">
                <tr>
                    <th>Action</th>
                    <th>SrNo.</th>
                    <th>Team Member Name</th>
                    <th>Team Member Position</th>
                    <th>Team Member Details</th>
                    <th>Team Member Profile</th>
                    <th>Team Member Image</th>
                </tr>
                <tr>
                    <% if(owner.length <=0 ){ %>
                        <td colspan="3" rowspan="3">No Record Available!!!</td>
                        <% } %>
                </tr>
                <% for(i=0; i<owner.length; i++){ %>
                    <tr>
                        <td>
                            <a href="/admin/edit_owner/<%=owner[i].owner_id%>"><button
                                    class="btn btn-success "><i class="fa fa-edit"
                                        style="font-size:24px"></i></button></a>
                            <a href="/admin/delete_owner/<%=owner[i].owner_id%>"><button
                                    class="btn btn-danger"><i class="fa fa-trash-o"
                                        style="font-size:24px"></i></button></a>
                        </td>
                        <td>
                            <%=i+1%>
                        </td>
                        <td>
                            <%=owner[i].team_name%>
                        </td>
                        <td>
                            <%=owner[i].team_position%>
                        </td>
                        <td>
                            <%=owner[i].owner_details%>
                        </td>
                        <td>
                            <a href="<%=owner[i].profile_link%>"><button class="btn btn-success"><i class="fa fa-linkedin"></i></button></a>
                        </td>
                        <td>
                            <img src="/uploads/<%=owner[i].team_image%>" width="100px" height="100px" alt="">
                        </td>
                    </tr>
                    <%}%>

            </table>
        </div>
    </div>
</div>


<%- include("footer.ejs") %>