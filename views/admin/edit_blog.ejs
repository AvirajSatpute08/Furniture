<%- include("navbar.ejs") %>

<form action="/admin/update_blog" method="post" enctype="multipart/form-data">
    <div class="container-fluid p-4 bg-white">
        <div class="row">
            <div class="mb-3 col-md-12">
                <h3>Edit Blog</h3>
            </div>
            <!-- Single blog object -->
            <div class="mb-3 col-md-6">
                <input type="hidden" name="blog_id" value="<%= blogs[0]._id %>" >
                Blog Title :
                <input type="text" name="blog_title" value="<%= blogs[0].blog_title %>" class="form-control">
            </div>
            <div class="mb-3 col-md-3">
                Blog Post Date :
                <input type="date" name="blog_date" value="<%= blogs[0].blog_date %>" class="form-control">
            </div>
            <div class="mb-3 col-md-3">
                Blog Post Time :
                <input type="time" name="blog_time" class="form-control" value="<%= blogs[0].blog_time %>">
            </div>
            <div class="mb-3 col-md-6">
                Blog Post By :
                <input type="text" name="blogPostBy" class="form-control" value="<%= blogs[0].blogPostBy %>">
            </div>
            <div class="mb-3 col-md-6">
                Blog Post By Position:
                <input type="text" name="blogPostByPosition" value="<%= blogs[0].blogPostByPosition %>" class="form-control">
            </div>
            <div class="col-md-4 mb-3">
                Blog Image :
                <input type="file" name="blog_image" class="form-control">
            </div>
            <div class="col-md-2 mb-2">
                <img src="/uploads/<%= blogs[0].blog_image %>" height="200px" width="100%" alt="">
            </div>
            <div class="mb-3 col-md-6">
                Blog Details :
                <textarea name="blog_details" class="form-control"><%= blogs[0].blog_details %></textarea>
            </div>
            <div class="col-md-12 text-center">
                <button class="btn btn-primary">Update Blog</button>
            </div>
        </div>
    </div>
</form>

<%- include("footer.ejs") %>
