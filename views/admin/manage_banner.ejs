<%- include("navbar.ejs")%>

<form action="/admin/save_banner" method="post" enctype="multipart/form-data">
    <div class="container p-3 bg-white">
        <div class="row">
            <div class="col-md-12">
                <h3>Manage Banner</h3>
            </div>
            <div class="col-md-6 mb-3">
                Enter Title :
                <input type="text" name="banner_title" value="<%=banner_info[0].banner_title%>" class="form-control" id="">
            </div>
            <div class="col-md-6 mb-3">
                Enter Details :
                <input type="text" name="banner_details" value="<%=banner_info[0].banner_details%>" class="form-control" id="">
            </div>
            <div class="col-md-6 mb-3">
                Shop Now Link : 
                <input type="text" name="banner_link" value="<%=banner_info[0].banner_link%>" class="form-control" id="">
            </div>
            <div class="col-md-4 mb-3">
                Banner Image : 
                <input type="file" name="banner_image" value="" class="form-control" id="">
            </div>
            <div class="col-md-2">
                <img src="/uploads/<%=banner_info[0].banner_image%>"  width="100%" alt="">
            </div>
            <div class="col-md-12 mb-3 text-center">
                <button class="btn btn-primary">Save Banner</button>
            </div>
        </div>
    </div>
</form>


