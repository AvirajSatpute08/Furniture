<%- include("navbar.ejs")%>

    <form action="/do_register" method="post">
        <div class="container-fluid mt-3 form-control-plaintext">
            <div class="row justify-content-center">
                <div class="col-md-5 text-center bg-white shadow p-5">
                    <div class="form-group mb-4">
                        <h3>SignUp Now</h3>
                    </div>
                    <div class="form-group text-start mb-2">
                        Enter Name :
                        <input type="text" name="c_name" id="" class="form-control">
                    </div>
                    <div class="form-group text-start mb-2">
                        Enter Email Id :
                        <input type="email" name="c_email" id="" class="form-control">
                    </div>
                    <div class="form-group text-start mb-2">
                        Enter Mobile No. :
                        <input type="number" name="c_mobile" id="" class="form-control">
                    </div>
                    <div class="form-group text-start mb-3">
                        Enter Password :
                        <input type="password" name="c_password" id="" autocomplete="off" class="form-control">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary">SignUp</button>
                    </div>
                    <div class="form-group mt-2 mb-5">
                       <h6 class="pt-2"> Already Have an Account <a href="/login">Login here</a></h6>
                        <br><br>
                    </div>

                </div>
            </div>
        </div>
    </form>
    <%- include("footer.ejs")%>