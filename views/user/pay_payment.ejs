<!-- Razorpay Checkout Script -->
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>

<script>
    // Define the Razorpay options
    var options = {
        "key": "rzp_test_XKfDlyAvFKXE7U", // Your Razorpay Key ID
        "amount": "<%= total * 100 %>", // Amount in paise (total in INR * 100)
        "currency": "INR",
        "name": "Your Business Name", // Your business name
        "description": "Test Transaction",
        "image": "https://example.com/your-logo.png", // Your logo or business image
        "order_id": "<%= order_id %>", // Pass the correct order_id here
        "callback_url": "http://localhost:1000/payment_success/<%= order_id %>",
        "prefill": { 
            "name": "<%= order_details.c_fname %> <%= order_details.c_lname %>", // Customer's name
            "email": "<%= order_details.c_email %>",
            "contact": "<%= order_details.c_phone %>" // Customer's phone number
        },
        "notes": {
            "address": "Your Address"
        },
        "theme": {
            "color": "#ffffff"
        }
    };
    
    var rzp1 = new Razorpay(options);
    
    // Open Razorpay checkout on page load or button click
    rzp1.open();
    // Optional: You can bind this to a button click if you want
    // document.getElementById('rzp-button1').onclick = function(e) {
    //     rzp1.open();
    //     e.preventDefault();
    // }
</script>
